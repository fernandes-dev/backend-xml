{
  "env": {
    // "browser": true,
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "globals": {
    "use": "readonly",
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": "off",
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "no-param-reassign": "off",
    "no-console": "off",
    "camelcase": "off"
  }
}
